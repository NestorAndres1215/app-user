<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<script src="https://cdn.tailwindcss.com"></script>

<script>
  tailwind.config = {
    theme: {
      extend: {
        colors: {
          primary: '#6366f1',
          'primary-hover': '#4f46e5',
          success: '#10b981',
          warning: '#f59e0b',
          danger: '#ef4444',
          glass: 'rgba(255, 255, 255, 0.1)',
        },
        animation: {
          'float': 'float 6s ease-in-out infinite',
          'pulse-slow': 'pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite',
        },
        keyframes: {
          float: {
            '0%, 100%': { transform: 'translateY(0)' },
            '50%': { transform: 'translateY(-10px)' }
          }
        }
      }
    }
  }
</script>

<style>
  .glass {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .card-hover {
    @apply transition-all duration-300 transform hover:scale-105 hover:shadow-2xl;
  }

  .btn-hover {
    @apply transition-all duration-200 hover:shadow-lg;
  }
</style>

<body class="min-h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-800 text-white p-4 md:p-8">

  <!-- Fondo animado -->
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <div
      class="absolute top-10 left-10 w-72 h-72 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse-slow">
    </div>
    <div
      class="absolute bottom-10 right-10 w-80 h-80 bg-pink-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse-slow animation-delay-2000">
    </div>
    <div
      class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-float">
    </div>
  </div>

  <div class="max-w-6xl mx-auto">

    <!-- Header -->
    <div class="glass rounded-3xl p-6 md:p-8 mb-8 shadow-2xl">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <div class="flex items-center gap-4">
          <div
            class="w-16 h-16 bg-gradient-to-br from-primary to-purple-600 rounded-2xl flex items-center justify-center shadow-lg">
            <i class="fas fa-crown text-white text-2xl"></i>
          </div>
          <div>
            <h1 class="text-3xl md:text-4xl font-bold">Panel de Administrador</h1>
            <p class="text-gray-300">Bienvenido, <strong>
                <%= user.name %>
              </strong></p>
          </div>
        </div>

        <!-- Avatar + Logout (opcional) -->
        <div class="flex items-center gap-3">
          <div
            class="w-12 h-12 bg-gradient-to-br from-primary/20 to-purple-600/20 rounded-full flex items-center justify-center">
            <i class="fas fa-user text-primary text-xl"></i>
          </div>
          <a href="/logout" class="text-sm text-gray-300 hover:text-white transition-colors">
            <i class="fas fa-sign-out-alt"></i> Cerrar sesión
          </a>
        </div>
      </div>
    </div>

    <!-- Tarjetas de acceso rápido -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">

      <!-- Gestión de Usuarios -->
      <a href="/users" class="glass rounded-3xl p-8 card-hover group">
        <div class="flex flex-col items-center text-center">
          <div
            class="w-20 h-20 bg-gradient-to-br from-primary to-primary-hover rounded-2xl flex items-center justify-center shadow-lg mb-4 group-hover:animate-pulse">
            <i class="fas fa-users text-white text-3xl"></i>
          </div>
          <h3 class="text-xl font-bold mb-2">Gestión de Usuarios</h3>
          <p class="text-gray-300 text-sm">Crear, editar y eliminar usuarios</p>
          <div class="mt-4 text-primary group-hover:translate-x-1 transition-transform inline-flex items-center gap-2">
            <span class="font-medium">Ir ahora</span>
            <i class="fas fa-arrow-right"></i>
          </div>
        </div>
      </a>

      <!-- Gestión de Roles -->
      <a href="/role" class="glass rounded-3xl p-8 card-hover group">
        <div class="flex flex-col items-center text-center">
          <div
            class="w-20 h-20 bg-gradient-to-br from-purple-600 to-pink-600 rounded-2xl flex items-center justify-center shadow-lg mb-4 group-hover:animate-pulse">
            <i class="fas fa-shield-alt text-white text-3xl"></i>
          </div>
          <h3 class="text-xl font-bold mb-2">Gestión de Roles</h3>
          <p class="text-gray-300 text-sm">Configurar permisos y roles del sistema</p>
          <div
            class="mt-4 text-purple-400 group-hover:translate-x-1 transition-transform inline-flex items-center gap-2">
            <span class="font-medium">Ir ahora</span>
            <i class="fas fa-arrow-right"></i>
          </div>
        </div>
      </a>

      <!-- Gestión de Estados -->
      <a href="/status" class="glass rounded-3xl p-8 card-hover group">
        <div class="flex flex-col items-center text-center">
          <div
            class="w-20 h-20 bg-gradient-to-br from-success to-emerald-600 rounded-2xl flex items-center justify-center shadow-lg mb-4 group-hover:animate-pulse">
            <i class="fas fa-circle-check text-white text-3xl"></i>
          </div>
          <h3 class="text-xl font-bold mb-2">Gestión de Estados</h3>
          <p class="text-gray-300 text-sm">Activo, inactivo, suspendido, etc.</p>
          <div class="mt-4 text-success group-hover:translate-x-1 transition-transform inline-flex items-center gap-2">
            <span class="font-medium">Ir ahora</span>
            <i class="fas fa-arrow-right"></i>
          </div>
        </div>
      </a>

    </div>

    <!-- Estadísticas rápidas (opcional) -->
    <div class="glass rounded-3xl p-6 mt-8 shadow-xl">
      <h3 class="text-lg font-semibold mb-4 flex items-center gap-2">
        <i class="fas fa-chart-pie text-primary"></i>
        Resumen del Sistema
      </h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
        <div>
          <p class="text-3xl font-bold text-primary">24</p>
          <p class="text-sm text-gray-300">Usuarios Totales</p>
        </div>
        <div>
          <p class="text-3xl font-bold text-success">18</p>
          <p class="text-sm text-gray-300">Activos</p>
        </div>
        <div>
          <p class="text-3xl font-bold text-warning">4</p>
          <p class="text-sm text-gray-300">Inactivos</p>
        </div>
        <div>
          <p class="text-3xl font-bold text-purple-400">3</p>
          <p class="text-sm text-gray-300">Roles</p>
        </div>
      </div>
    </div>

  </div>

</body>