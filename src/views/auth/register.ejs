
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>

  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: '#6366f1',
            'primary-hover': '#4f46e5',
            dark: '#1e293b',
            'dark-light': '#334155',
          },
          animation: {
            'float': 'float 6s ease-in-out infinite',
            'pulse-slow': 'pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite',
          },
          keyframes: {
            float: {
              '0%, 100%': { transform: 'translateY(0)' },
              '50%': { transform: 'translateY(-10px)' }
            }
          }
        }
      }
    }
  </script>

  <style>
    .input-focus:focus {
      @apply ring-4 ring-primary/20 border-primary shadow-lg;
    }

    .btn-hover {
      @apply transition-all duration-300 transform hover:scale-105 hover:shadow-xl;
    }

    .glass {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .select-wrapper {
      position: relative;
    }

    .select-wrapper select {
      appearance: none;
      padding-right: 3rem;
    }

    .select-wrapper::after {
      content: '\f078';
      font-family: 'Font Awesome 6 Free';
      font-weight: 900;
      position: absolute;
      right: 1rem;
      top: 50%;
      transform: translateY(-50%);
      pointer-events: none;
      color: #9ca3af;
    }

    .select-wrapper:focus-within::after {
      color: #6366f1;
    }
  </style>


<body
  class="min-h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-800 flex items-center justify-center p-4  relative">

  <!-- Fondo animado -->
  <div class="absolute inset-0 -z-10">
    <div
      class="absolute top-10 left-10 w-72 h-72 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse-slow">
    </div>
    <div
      class="absolute bottom-10 right-10 w-80 h-80 bg-pink-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse-slow animation-delay-2000">
    </div>
    <div
      class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-float">
    </div>
  </div>

  <!-- Tarjeta de Registro -->
  <div class="w-full max-w-2xl">
    <div class="glass rounded-3xl shadow-2xl p-6 md:p-10 transform transition-all duration-500 hover:scale-[1.01]">

      <!-- Título con icono -->
      <div class="text-center mb-8">
        <div
          class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-primary to-purple-600 rounded-2xl shadow-lg mb-4 animate-pulse">
          <i class="fas fa-user-plus text-white text-2xl"></i>
        </div>
        <h2 class="text-3xl font-bold text-white mb-2">Crear Cuenta</h2>
        <p class="text-gray-300 text-sm">Completa todos los campos para registrarte</p>
      </div>

      <!-- Formulario -->
      <form action="/register" method="POST" class="space-y-5">

        <!-- Fila: Nombre y Apellido -->
        <div class="grid md:grid-cols-2 gap-5">
          <div class="relative group">
            <label class="block text-sm font-medium text-gray-200 mb-2 flex items-center gap-2">
              <i class="fas fa-user text-primary"></i>
              Nombre
            </label>
            <div class="relative">
              <input type="text" name="firstName" required placeholder="Juan"
                class="w-full px-4 py-3 pl-12 bg-white/10 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none input-focus transition-all duration-300" />
              <i
                class="fas fa-id-card absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 group-focus-within:text-primary transition-colors"></i>
            </div>
          </div>

          <div class="relative group">
            <label class="block text-sm font-medium text-gray-200 mb-2 flex items-center gap-2">
              <i class="fas fa-user-tag text-primary"></i>
              Apellido
            </label>
            <div class="relative">
              <input type="text" name="lastName" required placeholder="Pérez"
                class="w-full px-4 py-3 pl-12 bg-white/10 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none input-focus transition-all duration-300" />
              <i
                class="fas fa-user-tag absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 group-focus-within:text-primary transition-colors"></i>
            </div>
          </div>
        </div>

        <!-- Teléfono -->
        <div class="relative group">
          <label class="block text-sm font-medium text-gray-200 mb-2 flex items-center gap-2">
            <i class="fas fa-phone text-primary"></i>
            Teléfono
          </label>
          <div class="relative">
            <input type="text" name="phone" placeholder="+54 11 1234-5678"
              class="w-full px-4 py-3 pl-12 bg-white/10 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none input-focus transition-all duration-300" />
            <i
              class="fas fa-mobile-alt absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 group-focus-within:text-primary transition-colors"></i>
          </div>
        </div>

        <!-- Username -->
        <div class="relative group">
          <label class="block text-sm font-medium text-gray-200 mb-2 flex items-center gap-2">
            <i class="fas fa-at text-primary"></i>
            Username
          </label>
          <div class="relative">
            <input type="text" name="username" required placeholder="@usuario"
              class="w-full px-4 py-3 pl-12 bg-white/10 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none input-focus transition-all duration-300" />
            <i
              class="fas fa-at absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 group-focus-within:text-primary transition-colors"></i>
          </div>
        </div>

        <!-- Email -->
        <div class="relative group">
          <label class="block text-sm font-medium text-gray-200 mb-2 flex items-center gap-2">
            <i class="fas fa-envelope text-primary"></i>
            Email
          </label>
          <div class="relative">
            <input type="email" name="email" required placeholder="tu@ejemplo.com"
              class="w-full px-4 py-3 pl-12 bg-white/10 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none input-focus transition-all duration-300" />
            <i
              class="fas fa-envelope absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 group-focus-within:text-primary transition-colors"></i>
          </div>
        </div>

        <!-- Fila: Fecha y Género -->
        <div class="grid md:grid-cols-2 gap-5">
          <div class="relative group">
            <label class="block text-sm font-medium text-gray-200 mb-2 flex items-center gap-2">
              <i class="fas fa-calendar-alt text-primary"></i>
              Fecha de nacimiento
            </label>
            <div class="relative">
              <input type="date" name="birthDate" required
                class="w-full px-4 py-3 pl-12 bg-white/10 border border-white/20 rounded-xl text-white focus:outline-none input-focus transition-all duration-300" />
              <i
                class="fas fa-calendar-day absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 group-focus-within:text-primary transition-colors"></i>
            </div>
          </div>

          <!-- Género - Select Personalizado -->
          <div class="relative group">
            <label class="block text-sm font-medium text-gray-200 mb-2 flex items-center gap-2">
              <i class="fas fa-venus-mars text-primary"></i>
              Género
            </label>
            <div class="relative">
              <!-- Botón que abre el dropdown -->
              <button type="button" id="gender-btn"
                class="w-full px-4 py-3 pl-12 bg-white/10 border border-white/20 rounded-xl text-white text-left flex items-center justify-between focus:outline-none input-focus transition-all duration-300">
                <span id="gender-text" class="text-gray-400">Selecciona...</span>
                <i class="fas fa-chevron-down text-gray-400 transition-transform duration-300" id="gender-icon"></i>
              </button>

              <!-- Icono de género -->
              <i
                class="fas fa-venus-mars absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 group-focus-within:text-primary transition-colors pointer-events-none"></i>

              <!-- Dropdown oculto -->
              <div id="gender-dropdown"
                class="absolute top-full mt-2 w-full bg-white/20 backdrop-blur-lg border border-white/30 rounded-xl shadow-2xl overflow-hidden z-50 hidden opacity-0 transform scale-95 transition-all duration-300">
                <button type="button" data-value="masculino"
                  class="gender-option w-full px-4 py-3 text-left text-white hover:bg-primary/20 transition-colors flex items-center gap-3">
                  <i class="fas fa-mars text-blue-400"></i> Masculino
                </button>
                <button type="button" data-value="femenino"
                  class="gender-option w-full px-4 py-3 text-left text-white hover:bg-primary/20 transition-colors flex items-center gap-3">
                  <i class="fas fa-venus text-pink-400"></i> Femenino
                </button>
                <button type="button" data-value="otro"
                  class="gender-option w-full px-4 py-3 text-left text-white hover:bg-primary/20 transition-colors flex items-center gap-3">
                  <i class="fas fa-transgender text-purple-400"></i> Otro
                </button>
              </div>
            </div>

            <!-- Campo oculto para enviar el valor -->
            <input type="hidden" name="gender" id="gender-input" required />
          </div>
        </div>

        <!-- Contraseña -->
        <div class="relative group">
          <label class="block text-sm font-medium text-gray-200 mb-2 flex items-center gap-2">
            <i class="fas fa-lock text-primary"></i>
            Contraseña
          </label>
          <div class="relative">
            <input type="password" name="password" required placeholder="••••••••"
              class="w-full px-4 py-3 pl-12 pr-12 bg-white/10 border border-white/20 rounded-xl text-white placeholder-gray-400 focus:outline-none input-focus transition-all duration-300" />
            <i
              class="fas fa-key absolute left-4 top-1/2 transform -translate-y-1/2 text-gray-400 group-focus-within:text-primary transition-colors"></i>
            <button type="button"
              class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-white transition-colors">
              <i class="fas fa-eye-slash"></i>
            </button>
          </div>
        </div>

        <!-- Botón Registrarme -->
        <button type="submit"
          class="w-full py-4 bg-gradient-to-r from-primary to-primary-hover text-white font-semibold rounded-xl shadow-lg btn-hover flex items-center justify-center gap-3 group mt-6">
          <span>Registrarme</span>
          <i class="fas fa-user-check group-hover:translate-x-1 transition-transform"></i>
        </button>
      </form>

      <!-- Enlace a login -->
      <div class="mt-6 text-center">
        <p class="text-gray-300 text-sm">
          ¿Ya tienes cuenta?
          <a href="/login" class="text-primary font-medium hover:underline hover:text-white transition-colors">
            Iniciar sesión
          </a>
        </p>
      </div>

      <!-- Decoración -->
      <div class="mt-8 flex justify-center gap-2">
        <div class="w-2 h-2 bg-primary/50 rounded-full animate-bounce"></div>
        <div class="w-2 h-2 bg-purple-500/50 rounded-full animate-bounce animation-delay-200"></div>
        <div class="w-2 h-2 bg-pink-500/50 rounded-full animate-bounce animation-delay-400"></div>
      </div>
    </div>
  </div>

  <!-- Script: Mostrar/Ocultar contraseña -->
  <script>
    const genderBtn = document.getElementById('gender-btn');
    const genderDropdown = document.getElementById('gender-dropdown');
    const genderText = document.getElementById('gender-text');
    const genderIcon = document.getElementById('gender-icon');
    const genderInput = document.getElementById('gender-input');
    const options = document.querySelectorAll('.gender-option');

    // Abrir/cerrar dropdown
    genderBtn.addEventListener('click', () => {
      const isOpen = !genderDropdown.classList.contains('hidden');

      if (isOpen) {
        genderDropdown.classList.add('hidden', 'opacity-0', 'scale-95');
        genderDropdown.classList.remove('block', 'opacity-100', 'scale-100');
        genderIcon.classList.remove('rotate-180');
      } else {
        genderDropdown.classList.remove('hidden');
        setTimeout(() => {
          genderDropdown.classList.remove('opacity-0', 'scale-95');
          genderDropdown.classList.add('opacity-100', 'scale-100');
        }, 10);
        genderIcon.classList.add('rotate-180');
      }
    });

    // Seleccionar opción
    options.forEach(option => {
      option.addEventListener('click', () => {
        const value = option.dataset.value;
        const text = option.textContent.trim();

        genderText.textContent = text;
        genderText.classList.remove('text-gray-400');
        genderText.classList.add('text-white');
        genderInput.value = value;

        // Cerrar dropdown
        genderDropdown.classList.add('hidden', 'opacity-0', 'scale-95');
        genderDropdown.classList.remove('block', 'opacity-100', 'scale-100');
        genderIcon.classList.remove('rotate-180');
      });
    });

    // Cerrar al hacer clic fuera
    document.addEventListener('click', (e) => {
      if (!genderBtn.contains(e.target) && !genderDropdown.contains(e.target)) {
        genderDropdown.classList.add('hidden', 'opacity-0', 'scale-95');
        genderDropdown.classList.remove('block', 'opacity-100', 'scale-100');
        genderIcon.classList.remove('rotate-180');
      }
    });
  </script>
</body>
